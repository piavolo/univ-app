<div class="row sign-up-form">
    <div class="col s6 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Name: <%= @student.name %></span>
                <p>Email: <%= @student.email %></p>
                <p>Course Enrollments: None</p>
            </div>
            <% if current_user == @student %>
                <div class="card-action">
                    <%= link_to edit_student_path(@student) do %>
                        <i class="material-icons left">create</i>
                        Edit your profile
                    <% end %>
                </div>
            <% end %>
        </div>
        <!--<%= link_to edit_student_path(@student), class: "waves-effect waves-light btn" do %>
            <i class="material-icons left">create</i>
            Edit your profile
        <% end %>-->
    </div> 
</div>